<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Test Simple</title>
</head>
<body>
    <h1>Test Simple - Funciona</h1>
    <div id="results">Esperando...</div>
    
    <button id="testBtn">Test Fetch</button>
    
    <script>
        console.log('✅ Script cargado');
        
        document.getElementById('testBtn')?.addEventListener('click', async () => {
            console.log('Click!');
            const div = document.getElementById('results');
            if (div) {
                div.textContent = 'Botón clickeado a las ' + new Date().toLocaleTimeString();
            }
            
            // Test fetch simple
            try {
                const response = await fetch('/track/test123.png');
                console.log('Response:', response.status);
            } catch (e) {
                console.error('Error:', e);
            }
        });
    </script>
</body>
</html>
</html>