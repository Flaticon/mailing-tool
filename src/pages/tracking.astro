<body>
<!-- Reemplaza el <script> en tu test-tracking.astro con este cÃ³digo corregido -->
<script>
  // Variables desde Astro (esto ya estÃ¡ bien en tu cÃ³digo)
  const testTrackingId = "tu-tracking-id-aqui"; // SerÃ¡ reemplazado por define:vars
  
  const results = document.getElementById('results');
  
  function addLog(message, type = 'info') {
    const timestamp = new Date().toLocaleTimeString();
    const colors = {
      info: 'text-blue-600',
      success: 'text-green-600',
      error: 'text-red-600',
      warning: 'text-yellow-600'
    };
    
    const logEntry = document.createElement('div');
    logEntry.className = colors[type] || colors.info;
    logEntry.innerHTML = `[${timestamp}] ${message}`;
    
    results.appendChild(logEntry);
    results.scrollTop = results.scrollHeight;
  }
  
  // BotÃ³n: Cargar pixel
  document.getElementById('loadPixel').addEventListener('click', async () => {
    addLog('ğŸ”„ Cargando pixel de tracking...', 'info');
    
    try {
      const response = await fetch(`/track/${testTrackingId}.png`);
      
      if (response.ok) {
        addLog('âœ… Pixel cargado correctamente', 'success');
        addLog(`ğŸ“Š Status: ${response.status}, Content-Type: ${response.headers.get('content-type')}`, 'info');
      } else {
        addLog(`âŒ Error al cargar pixel: ${response.status}`, 'error');
      }
    } catch (error) {
      addLog(`âŒ Error de conexiÃ³n: ${error.message}`, 'error');
    }
  });
  
  // BotÃ³n: Cargar estadÃ­sticas - CORREGIDO
  document.getElementById('loadStats').addEventListener('click', async () => {
    addLog('ğŸ“ˆ Cargando estadÃ­sticas...', 'info');
    
    try {
      // âœ… CORRECCIÃ“N 1: Agregado "await fetch"
      // âœ… CORRECCIÃ“N 2: Cambiado ruta a "/api/stats/tracking"
      const response = await fetch(`/api/stats/tracking?id=${testTrackingId}`);
      
      // Verificar si la respuesta es OK antes de parsear JSON
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const data = await response.json();
      
      if (data.success) {
        addLog(`ğŸ“Š Total de aperturas: ${data.data.totalOpens}`, 'success');
        
        // Mostrar detalles de las aperturas si existen
        if (data.data.opens && data.data.opens.length > 0) {
          addLog(`ğŸ•’ Primera apertura: ${data.data.opens[0].timestamp}`, 'success');
          
          // Mostrar resumen de cada apertura
          data.data.opens.forEach((open, index) => {
            const userAgent = open.user_agent ? 
              open.user_agent.substring(0, 50) + '...' : 
              'Unknown';
            addLog(`  ${index + 1}. ${new Date(open.timestamp).toLocaleString()} - ${userAgent}`, 'info');
          });
        } else {
          addLog('â„¹ï¸ No hay aperturas registradas aÃºn', 'warning');
        }
        
        // Mostrar informaciÃ³n de debug si existe
        if (data.data.dbTest) {
          addLog(`ğŸ”§ DB Test: ${JSON.stringify(data.data.dbTest)}`, 'info');
        }
      } else {
        addLog(`âŒ Error en stats: ${data.error}`, 'error');
      }
    } catch (error) {
      addLog(`âŒ Error al cargar stats: ${error.message}`, 'error');
      console.error('Error completo:', error);
    }
  });
  
  // BotÃ³n: Limpiar
  document.getElementById('clearLogs').addEventListener('click', () => {
    results.innerHTML = '<p class="text-gray-500">Logs limpiados. Prueba el sistema...</p>';
  });
  
  // Cargar automÃ¡ticamente al inicio
  addLog('ğŸš€ Sistema de tracking inicializado', 'success');
  addLog(`ğŸ”‘ Tracking ID: ${testTrackingId}`, 'info');
  addLog('â„¹ï¸ Usa los botones de arriba para probar el sistema', 'info');
</script>
