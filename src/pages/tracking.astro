  </div>
  
  <script>
    // Variables
    const testTrackingId = document.querySelector('.font-mono.text-blue-700').textContent;
    const emailContent = `{emailWithTracking}`;
    
    console.log('ğŸš€ Script iniciado');
    console.log('ğŸ“ Tracking ID:', testTrackingId);
    
    // Mostrar el contenido del email
    document.getElementById('email-content').innerHTML = emailContent;
    
    // FunciÃ³n para agregar logs
    function addLog(message, type = 'info') {
      const results = document.getElementById('results');
      const timestamp = new Date().toLocaleTimeString();
      const colors = {
        info: 'text-blue-600',
        success: 'text-green-600',
        error: 'text-red-600',
        warning: 'text-yellow-600'
      };
      
      const logEntry = document.createElement('div');
      logEntry.className = colors[type] || colors.info;
      logEntry.textContent = `[${timestamp}] ${message}`;
      
      results.appendChild(logEntry);
      results.scrollTop = results.scrollHeight;
      
      console.log(`[${type}] ${message}`);
    }
    
    // InicializaciÃ³n
    document.addEventListener('DOMContentLoaded', () => {
      console.log('âœ… DOM Ready');
      
      const loadPixelBtn = document.getElementById('loadPixel');
      const loadStatsBtn = document.getElementById('loadStats');
      const clearLogsBtn = document.getElementById('clearLogs');
      
      // Mensaje inicial
      addLog('ğŸš€ Sistema de tracking inicializado', 'success');
      addLog(`ğŸ”‘ Tracking ID: ${testTrackingId}`, 'info');
      
      // BotÃ³n: Cargar pixel
      if (loadPixelBtn) {
        loadPixelBtn.addEventListener('click', async () => {
          addLog('ğŸ”„ Cargando pixel de tracking...', 'info');
          
          try {
            const url = `/track/${testTrackingId}.png`;
            addLog(`ğŸ“¡ Fetching: ${url}`, 'info');
            
            const response = await fetch(url);
            
            if (response.ok) {
              addLog('âœ… Pixel cargado correctamente', 'success');
              addLog(`ğŸ“Š Status: ${response.status}, Type: ${response.headers.get('content-type')}`, 'info');
            } else {
              addLog(`âŒ Error al cargar pixel: ${response.status}`, 'error');
            }
          } catch (error) {
            addLog(`âŒ Error de conexiÃ³n: ${error.message}`, 'error');
            console.error(error);
          }
        });
      }
      
      // BotÃ³n: Cargar estadÃ­sticas - CORREGIDO
      if (loadStatsBtn) {
        loadStatsBtn.addEventListener('click', async () => {
          addLog('ğŸ“ˆ Cargando estadÃ­sticas...', 'info');
          
          try {
            // Probar diferentes rutas posibles
            const routes = [
              `/api/stats/tracking?id=${testTrackingId}`,
              `/stats/tracking?id=${testTrackingId}`,
              `/functions/stats/tracking?id=${testTrackingId}`
            ];
            
            let data = null;
            let successUrl = null;
            
            for (const url of routes) {
              addLog(`ğŸ” Probando ruta: ${url}`, 'info');
              
              try {
                const response = await fetch(url);
                
                if (response.ok) {
                  data = await response.json();
                  successUrl = url;
                  addLog(`âœ… Ruta funcional: ${url}`, 'success');
                  break;
                } else {
                  addLog(`âŒ Ruta ${url} devolviÃ³: ${response.status}`, 'warning');
                }
              } catch (e) {
                addLog(`âš ï¸ Error en ${url}: ${e.message}`, 'warning');
              }
            }
            
            if (data && data.success) {
              addLog(`ğŸ“Š Total de aperturas: ${data.data.totalOpens}`, 'success');
              
              if (data.data.opens && data.data.opens.length > 0) {
                addLog('ğŸ“‹ Detalles de aperturas:', 'info');
                data.data.opens.forEach((open, index) => {
                  const time = new Date(open.timestamp).toLocaleString();
                  addLog(`  ${index + 1}. ${time}`, 'info');
                });
              } else {
                addLog('â„¹ï¸ No hay aperturas registradas aÃºn', 'warning');
              }
              
              if (data.data.dbTest) {
                addLog(`ğŸ”§ DB Status: ${data.data.dbTest.success ? 'OK' : 'Error'}`, 'info');
              }
            } else if (data) {
              addLog(`âŒ Error en respuesta: ${data.error || 'Unknown'}`, 'error');
            } else {
              addLog('âŒ No se pudo conectar a ninguna ruta de stats', 'error');
              addLog('ğŸ’¡ Verifica que el endpoint estÃ© configurado correctamente', 'warning');
            }
          } catch (error) {
            addLog(`âŒ Error general: ${error.message}`, 'error');
            console.error('Error completo:', error);
          }
        });
      }
      
      // BotÃ³n: Limpiar
      if (clearLogsBtn) {
        clearLogsBtn.addEventListener('click', () => {
          const results = document.getElementById('results');
          results.innerHTML = '<p class="text-gray-500">Logs limpiados. Prueba el sistema...</p>';
          addLog('ğŸ§¹ Logs limpiados', 'info');
        });
      }
    });
  </script>
