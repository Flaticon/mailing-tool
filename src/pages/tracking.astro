      </div>
    </div>
  </div>
  
  <script define:vars={{ testTrackingId }}>
    const results = document.getElementById('results')
    
    function addLog(message, type = 'info') {
      const timestamp = new Date().toLocaleTimeString()
      const colors = {
        info: 'text-blue-600',
        success: 'text-green-600',
        error: 'text-red-600',
        warning: 'text-yellow-600'
      }
      
      const logEntry = document.createElement('div')
      logEntry.className = colors[type] || colors.info
      logEntry.innerHTML = `[${timestamp}] ${message}`
      
      results.appendChild(logEntry)
      results.scrollTop = results.scrollHeight
    }
    
    // BotÃ³n: Cargar pixel
    document.getElementById('loadPixel').addEventListener('click', async () => {
      addLog('ğŸ”„ Cargando pixel de tracking...', 'info')
      
      try {
        const response = await fetch(`/track/${testTrackingId}.png`)
        
        if (response.ok) {
          addLog('âœ… Pixel cargado correctamente', 'success')
          addLog(`ğŸ“Š Status: ${response.status}, Content-Type: ${response.headers.get('content-type')}`, 'info')
        } else {
          addLog(`âŒ Error al cargar pixel: ${response.status}`, 'error')
        }
      } catch (error) {
        addLog(`âŒ Error de conexiÃ³n: ${error.message}`, 'error')
      }
    })
    
    // BotÃ³n: Cargar estadÃ­sticas
    document.getElementById('loadStats').addEventListener('click', async () => {
      addLog('ğŸ“ˆ Cargando estadÃ­sticas...', 'info')
      
      try {
        const response = (`/stats/tracking?id=${testTrackingId}`)
        const data = await response.json()
        
        if (data.success) {
          addLog(`ğŸ“Š Total de aperturas: ${data.data.totalOpens}`, 'success')
          if (data.data.firstOpen) {
            addLog(`ğŸ•’ Primera apertura: ${data.data.firstOpen}`, 'success')
          }
          if (data.data.totalOpens > 0) {
            addLog(`ğŸ“‹ Detalles: ${JSON.stringify(data.data.opens.map(o => ({ time: o.timestamp, agent: o.user_agent?.substring(0, 30) + '...' })))}`, 'info')
          }
        } else {
          addLog(`âŒ Error en stats: ${data.error}`, 'error')
        }
      } catch (error) {
        addLog(`âŒ Error al cargar stats: ${error.message}`, 'error')
      }
    })
    
    // BotÃ³n: Limpiar
    document.getElementById('clearLogs').addEventListener('click', () => {
      results.innerHTML = '<p class="text-gray-500">Logs limpiados. Prueba el sistema...</p>'
    })
    
    // Cargar automÃ¡ticamente al inicio
    addLog('ğŸš€ Sistema de tracking inicializado', 'success')
    addLog(`ğŸ”‘ Tracking ID: ${testTrackingId}`, 'info')
  </script>
